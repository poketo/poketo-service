  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "dotenv": "^5.0.0",
    "flow-bin": "^0.79.1",
    "got": "^9.2.0",
    "jest": "^22.2.1",
    "prettier": "^1.14.2",
    "xo": "^0.22.0"
