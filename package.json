{
  "name": "poketo-service",
  "version": "0.0.1",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "now-start": "node dist/server.js",
    "start": "nodemon lib/server.js --exec babel-node --presets env,stage-2,flow",
    "build": "babel lib -d dist --ignore '*.test.js'",
    "deploy": "now --public --name poketo-api",
    "test": "jest"
  },
  "now": {
    "env": {
      "MONGO_URL": "@poketo-mongo-url"
    }
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-route": "^3.2.0",
    "mongorito": "^3.0.4",
    "normalize-url": "^2.0.1",
    "p-map": "^1.2.0",
    "poketo": "^0.0.24",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "dotenv": "^5.0.0",
    "flow-bin": "^0.65.0",
    "jest": "^22.2.1"
  },
  "license": "MIT"
}
